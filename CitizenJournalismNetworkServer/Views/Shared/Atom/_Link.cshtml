@using CitizenJournalismNetworkServer.Domain.Models
@using CitizenJournalismNetworkServer.Web.Helpers
@using CitizenJournalismNetworkServer.Web.Utilities
@model Link

<link 
    href="@Model.Href"
    @OptionalRenderingHelper.RenderAttributeifExists("rel", UtilityRelationship.GetRelationshipAttributeValue(Model.RelationshipType))
    @OptionalRenderingHelper.RenderAttributeifExists("type", Model.Type)
    @OptionalRenderingHelper.RenderAttributeifExists("hreflang", Model.Language)
    @OptionalRenderingHelper.RenderAttributeifExists("title", Model.Title)
    @(OptionalRenderingHelper.RenderAttributeIfExists<long?>("length", Model.Length))
>

</link>