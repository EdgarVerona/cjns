@model IEnumerable<CitizenJournalismNetworkServer.Domain.Models.Entry>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            AtomId
        </th>
        <th>
            DatePublished
        </th>
        <th>
            Rights
        </th>
        <th>
            Summary
        </th>
        <th>
            Title
        </th>
        <th>
            DateUpdated
        </th>
        <th>
            IsDraft
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
            @item.AtomId
        </td>
        <td>
            @String.Format("{0:g}", item.DatePublished)
        </td>
        <td>
            @item.Rights
        </td>
        <td>
            @item.Summary
        </td>
        <td>
            @item.Title
        </td>
        <td>
            @String.Format("{0:g}", item.DateUpdated)
        </td>
        <td>
            @item.IsDraft
        </td>
    </tr>
}

</table>

