@model CitizenJournalismNetworkServer.Models.Entry

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Entry</legend>

    <div class="display-label">AtomId</div>
    <div class="display-field">@Model.AtomId</div>

    <div class="display-label">DatePublished</div>
    <div class="display-field">@String.Format("{0:g}", Model.DatePublished)</div>

    <div class="display-label">Rights</div>
    <div class="display-field">@Model.Rights</div>

    <div class="display-label">Summary</div>
    <div class="display-field">@Model.Summary</div>

    <div class="display-label">Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">DateUpdated</div>
    <div class="display-field">@String.Format("{0:g}", Model.DateUpdated)</div>

    <div class="display-label">IsDraft</div>
    <div class="display-field">@Model.IsDraft</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}

